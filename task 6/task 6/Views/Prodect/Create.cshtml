@model task_6.Models.Prodect
@{
    ViewData["Title"] = "Create";
}

<h1>Create Prodect</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
