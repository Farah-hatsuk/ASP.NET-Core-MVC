@model IEnumerable<task_6.Models.Prodect>
@{
    ViewData["Title"] = "Index";
}

<h1>Prodect</h1>

<div style="display:flex; justify-content:space-around">

    @foreach (var item in Model)
    {

        <div class="card" style="width: 18rem;">
            <img src="@item.Image" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Price</p>
                <p class="card-text">@item.Description</p>

                <a class="btn btn-primary" asp-controller="Prodect" asp-action="Details" asp-route-id="@item?.Id">Details</a>
                <a class="btn btn-warning" asp-controller="Prodect" asp-action="Edit" asp-route-id="@item?.Id">Edit</a>
                <a class="btn btn-warning" asp-controller="Prodect" asp-action="Delete" asp-route-id="@item?.Id">Delete</a>
                <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?')">
                    <input type="hidden" name="Id" value="@item?.Id" />
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
                @* <a class="btn btn-danger"  asp-controller="Prodect" asp-action="Delete" asp-route-id="@item?.Id">Delete</a> *@
            </div>
        </div>

    }

</div>


<a asp-controller="Prodect" asp-action="Create">Add New Prodect</a>




