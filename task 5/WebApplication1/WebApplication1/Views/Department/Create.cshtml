@model WebApplication1.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Department</h1>

<form asp-action="Create">
    <label>Name:</label>
    <input type="text" asp-for="Name" required /><br>

    <label>Location:</label>
    <input type="text" asp-for="Location" required /><br>

    <label>Manager:</label>
    <input type="text" asp-for="Manager" required /><br>

    <label>EmployeesCount:</label>
    <input type="text" asp-for="EmployeesCount" required /><br>

    <button type="submit">Save</button>
</form>

